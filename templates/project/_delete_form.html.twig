<form method="post" action="{{ path('project_delete', {'id': project.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce type de projet ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <button class="btn red"><i class="material-icons-outlined left">delete</i> Supprimer</button>
</form>
