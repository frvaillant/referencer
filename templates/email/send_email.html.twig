{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="row maincolor headline">
        <div class="col s1">
            <a class="btn-floating white mgr10"><i class="material-icons-outlined text-maincolor">mail</i></a>
        </div>
        <div class="col s11">
            <h5 class="main-title white-text">Envoyer votre dossier par mail</h5>
        </div>
    </div>

    <div class="row container" id="mailform-container">
        <div class="col s6" id="mailform">
            {{ form_start(form) }}
            <div class="col s12">
                <label class="required">Objet du mail</label>
                {{ form_widget(form.object) }}
            </div>
            <div class="col s12">
                <label class="required">Destinataire</label>
                {{ form_widget(form.sendTo) }}
            </div>
            <div class="col s12">
                <label class="required">Message</label>
                {{ form_widget(form.message) }}
            </div>
            <div class="col s12">
                <button class="btn mgt20 maincolor">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col s6">
                <embed src="/pdf/references.pdf#toolbar=0" width="100%" height="400px"/></embed>
        </div>
    </div>


{% endblock %}
